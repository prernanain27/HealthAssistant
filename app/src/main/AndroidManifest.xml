<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.healthassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewUserData" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".PHR" />
        <activity android:name=".PersonalInformation" />
        <activity android:name=".DetailedInformation" />
        <activity android:name=".TimingInformation" />
        <activity
            android:name=".HomeScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_home_screen"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.healthassistant.LoginActivity" />
        </activity>
        <activity
            android:name=".AddPrescription_AP"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_add_prescription__ap"
            android:parentActivityName=".HomeScreen"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.healthassistant.HomeScreen" />
        </activity>
    </application>

</manifest>